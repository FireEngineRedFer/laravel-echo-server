{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist",
    "pretty": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "es5",
    "lib": ["es2015", "dom"]
  },
  "include": [
    "src/index.ts",
    "src/cli/index.ts",
    "spec/**/*.spec.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "formatOnSave": false,
    "rewriteTsconfig": false
  },
  "typeRoots": [
    "../node_modules/@types"
  ]
}
